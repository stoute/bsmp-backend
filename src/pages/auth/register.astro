---
import PageLayout from "@layouts/PageLayout.astro";
import { SITE } from "@consts";
---

<PageLayout title="Register" description="Create a new account">
  <div class="mx-auto flex h-screen max-w-md flex-col items-center justify-center space-y-6 bg-white p-2 text-black transition-all">
    <div class="flex w-full flex-col rounded-xl border bg-gray-100/40 shadow-lg">
      <div class="flex w-full flex-col items-center rounded-xl border-b bg-white p-4 py-10 md:p-8 lg:p-10">
        <h1 class="text-lg font-semibold">Sign Up With {SITE.TITLE}</h1>
        <h2 class="mb-8 text-center text-sm text-gray-500">
          Create an account to access your awesome tool!
        </h2>

        <form class="w-full space-y-4">
          <div>
            <input
              type="email"
              placeholder="Email"
              class="mb-2 w-full rounded-md border p-1.5 text-sm focus:border-2 focus:border-purple-400 focus:outline-none"
            />
          </div>
          <div>
            <input
              type="password"
              placeholder="Password"
              class="mb-2 w-full rounded-md border p-1.5 text-sm focus:border-2 focus:border-purple-400 focus:outline-none"
            />
          </div>

          <button
            type="submit"
            class="w-full rounded-lg bg-gradient-to-b from-purple-500 to-purple-600 p-2 text-sm text-white shadow-md transition-all hover:shadow-lg"
          >
            Sign Up
          </button>
        </form>

        <div class="mt-10 mb-8 flex w-full flex-row items-center">
          <div class="h-[1px] w-1/2 bg-gray-300"></div>
          <p class="mx-2 text-sm font-normal text-gray-400">or</p>
          <div class="h-[1px] w-1/2 bg-gray-300"></div>
        </div>

        <button
          class="flex w-full flex-row items-center justify-center gap-2 rounded-lg border bg-white p-2 text-sm font-medium text-gray-500 shadow-sm transition-all hover:shadow-md"
        >
          <svg
            xmlns="http://www.w3.org/2000/svg"
            height="18"
            viewBox="0 0 24 24"
            width="18"
          >
            <path
              d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"
              fill="#4285F4"
            />
            <path
              d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"
              fill="#34A853"
            />
            <path
              d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"
              fill="#FBBC05"
            />
            <path
              d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"
              fill="#EA4335"
            />
            <path d="M1 1h22v22H1z" fill="none" />
          </svg>
          Sign up with Google
        </button>
      </div>

      <div class="font-regular my-2 flex flex-row justify-center text-xs text-gray-500">
        Existing user?
        <a
          href="/auth/login"
          class="ml-1 cursor-pointer font-medium text-purple-500"
        >
          Sign in
        </a>
      </div>
    </div>
  </div>
</PageLayout>