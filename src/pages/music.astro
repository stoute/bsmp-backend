---
import PageLayout from "@layouts/PageLayout.astro";
---

<PageLayout title={'music'} description={'music'}>
    <style is:global>
        .music article{
            margin: 0 auto;
            max-width: 800px;
            padding: 2.5em 2.25em;;
            text-align: center;
            font-weight: bold;
        }
        .music article iframe{
            margin-bottom: 1em;
        }
