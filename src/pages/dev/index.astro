---
// src/pages/chat.astro
import PageLayout from "@layouts/PageLayout.astro";
import LangChainChat from "@components/LangChainChat";
---

<PageLayout title="AI Chat">
  <main>
    <h1>-</h1>
    <LangChainChat client:load />
  </main>
</PageLayout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
  }

  h1 {
    text-align: center;
    margin-bottom: 2rem;
  }

  :global(.chat-container) {
    display: flex;
    flex-direction: column;
    height: 70vh;
    border: 1px solid #ccc;
    border-radius: 8px;
    overflow: hidden;
  }

  :global(.messages) {
    flex: 1;
    overflow-y: auto;
    padding: 1rem;
  }

  :global(.message) {
    margin-bottom: 1rem;
    padding: 0.75rem;
    border-radius: 8px;
  }

  :global(.message.user) {
    background-color: #e1f5fe;
    align-self: flex-end;
  }

  :global(.message.assistant) {
    background-color: #f5f5f5;
    align-self: flex-start;
  }

  :global(.loading) {
    font-style: italic;
    color: #888;
  }

  :global(form) {
    display: flex;
    padding: 1rem;
    border-top: 1px solid #ccc;
  }

  :global(input) {
    flex: 1;
    padding: 0.75rem;
    border: 1px solid #ccc;
    border-radius: 4px;
  }

  :global(button) {
    padding: 0.75rem 1.5rem;
    margin-left: 0.5rem;
    background-color: #0077cc;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  :global(button:disabled) {
    background-color: #cccccc;
  }
</style>
